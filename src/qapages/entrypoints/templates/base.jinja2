<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
  <title>{% block title %}{% endblock %} - FAIRPoints QAPages</title>
  {# <link rel="stylesheet" href="/static/style.css') }}"> #}
  <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
  <script type="application/ld+json">
      {% block schemaorg %}{% endblock %}
  </script>
</head>
<body>
  <nav class="bg-blue-500 text-white px-4 pt-2">
    <h1><a href="/" class="text-white-500 underline">FAIRPoints QAPages</a></h1>
  </nav>
  <section class="content">
    <header id="main-header" class="header">
      <div id="header-content"  class="bg-blue-300 p-4">{% block header %}{% endblock %}</div>
    </header>
    {% for message in messages %}
      <div class="flash">{{ message }}</div>
    {% endfor %}
    {% block content %}{% endblock %}
  </section>
  <section class="footer">
    {% block footer %}
      <div id="main-footer" class="footer text-center py-8 text-slate-400">
        <div>Questions? Contact <a href="mailto:donny@polyneme.xyz">donny@polyneme.xyz</a></div>
      </div>
    {% endblock %}
  </section>
</body>
</html>